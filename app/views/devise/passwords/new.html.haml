#password_forgotten

  %h2 Forgot your password?

  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|

    = devise_error_messages!

    %fieldset.input
      %ol
        %li
          = f.label :email
          = f.email_field :email

    %fieldset.buttons
      %ol
        %li.commit
          = f.submit "Send me instructions"


    = render :partial => "devise/shared/links"
