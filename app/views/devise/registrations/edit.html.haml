.page-header
  = render "shared/flashes"
  %h1
    = "Profile of #{current_user.firstname} #{current_user.lastname}"

    %small edit you're account details
.row
  .span14
    %h2

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|

      = get_devise_error_messages

      %fieldset

        .clearfix

          = f.label :firstname, :for => 'xlInput'
          .input
            = f.text_field :firstname, :class => 'xlarge', :id => 'user_firstname'

        .clearfix
          = f.label :lastname, :for => 'xlInput'
          .input
            = f.text_field :lastname, :class => 'xlarge', :id => 'user_lastname'

        .clearfix
          = f.label :email, :for => 'xlInput'
          .input
            = f.text_field :email, :class => 'xlarge', :id => 'user_email'

        .clearfix
          = f.label :password, :for => 'xlInput'
          .input
            = f.password_field :password, :id => 'user_password'

        .clearfix
          = f.label :password, :for => 'xlInput'
          .input
            = f.password_field :password_confirmation, :id => 'user_password_confirmation'
            %span.help-inline
              password confirmation

        .clearfix
          = f.label :current_password, :for => 'xlInput'
          .input
            = f.password_field :current_password, :id => 'user_current_password'

        .actions
          = f.submit t("form.button.save"), :class => 'btn primary'
          %a.btn{:href => "/"} Cancel