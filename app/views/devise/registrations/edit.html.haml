.page-header
  = render "shared/flashes"
  %h1#page_title
    = t('registrations.edit.heading')
    = "#{current_user.firstname} #{current_user.lastname}"

    %small
      = t('registrations.edit.subheading')
.row
  .span14
    %h2

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|

      = get_devise_error_messages

      %fieldset#fieldset_user_edit

        .clearfix

          = f.label t('form.label.firstname'), :for => 'xlInput', :id => 'label_firstname'
          .input
            = f.text_field :firstname, :class => 'xlarge', :id => 'field_firstname'

        .clearfix
          = f.label t('form.label.lastname'), :for => 'xlInput', :id => 'label_lastname'
          .input
            = f.text_field :lastname, :class => 'xlarge', :id => 'field_lastname'

        .clearfix
          = f.label t('form.label.email'), :for => 'xlInput', :id => 'label_email'
          .input
            = f.text_field :email, :class => 'xlarge', :id => 'field_email'

        .clearfix
          = f.label :password, t('form.label.password.new'), :for => 'xlInput', :id => 'label_password_new'
          .input
            = f.password_field :password, :id => 'field_password'

        .clearfix
          = f.label :password_confirmation, t('form.label.password.new'), :for => 'xlInput', :id => 'label_password_new_confirmation'
          .input
            = f.password_field :password_confirmation, :id => 'field_password_confirmation'
            %span.help-inline#help_password_confirmation
              = t('form.help.password_confirmation')

        .clearfix
          = f.label :current_password, t('form.label.password.current'), :for => 'xlInput', :id => 'label_password_current'
          .input
            = f.password_field :current_password, :id => 'field_current_password'

        .actions
          = f.submit t("form.button.save"), :class => 'btn primary'
          %a.btn{:href => "/", :id => "button_cancel"}
            = t("form.button.cancel")