!!! utf-8
%html.signed_out
  %head
    = render "shared/meta"
    %body
      .topbar
        .fill
          .container
            %a.brand{:href => "/"} Educon
            %ul.nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#about"} About
              %li
                %a{:href => "#contact"} Contact
            
            = form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => { :class => "pull-right"}) do |f|
              = f.email_field :email, :class => 'input-medium', :placeholder => 'Email'
              = f.password_field :password, :class => 'input-medium', :placeholder => 'Password'
              %button.btn{:type => "submit"} Sign in
                          
      .container
        .content
          = yield
          
