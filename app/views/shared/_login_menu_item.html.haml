= form_for("user", :url => user_session_path,:html => { :class => "pull-right"}) do |f|
  = f.email_field :email, :class => 'input-medium', :placeholder => t('form.placeholder.email')
  = f.password_field :password, :class => 'input-medium', :placeholder => t('form.placeholder.password')
  %button.btn{:type => "submit", :id => 'button_sign_in'}
    = t('topbar.menu.item.sign.in')